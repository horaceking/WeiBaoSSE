<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageAvatarView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher"
         />

    <Button
        android:id="@+id/btnAvatarTakePictureNow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/MakeAvatarButtonText" />

    <Button
        android:id="@+id/btnAvatarGetLocalPicture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/GetAvatarButtonText" />

    <Button
        android:id="@+id/btnCancelChangeAvatar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/CancelButtonText" />

</LinearLayout>
